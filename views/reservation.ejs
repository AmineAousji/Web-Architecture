<% include ("../controllers/reservation.js")%>
<html>
    
    <head>
        <link href="style.css" rel="stylesheet" type="text/css">
        <title>Reservation - EcamAir</title>
    </head>
    
    <body>
        <div class="content">
            <h1>Reservation</h1>
            <form action = "/passengers" method = "get" name="reservation">
